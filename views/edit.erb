<form action="/pizza-orders/<%= @order.id %>" method="post">
  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" value="<%= @order.first_name %>">

  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" value="<%= @order.last_name %>">

  <label for="pizza-select">Select a pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="<%= @order.topping %>">"<%= @order.topping %>"</option>
    <option value="Margherita">Margherita</option>
    <option value="Calzone">Calzone</</option>
  </select>

  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" value="<%= @order.quantity %>">

  <input type="submit" value="UPDATE Order">

</form>
